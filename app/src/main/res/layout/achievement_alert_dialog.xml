<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/achievementTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/great"
        android:fontFamily="@font/gotham_bold"
        android:textSize="24sp"
        android:textColor="#F4FF81"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/achievementGiphy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/fireworks"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/achievementTitleTextView"
        app:layout_constraintEnd_toEndOf="@id/achievementTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/achievementTitleTextView"/>

    <TextView
        android:id="@+id/achievementInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/gotham_bold"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="@id/achievementGiphy"
        app:layout_constraintEnd_toEndOf="@id/achievementGiphy"
        app:layout_constraintTop_toBottomOf="@id/achievementGiphy" />

    <Button
        android:id="@+id/achievementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get"
        android:backgroundTint="#304FFE"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/achievementInfoTextView"
        app:layout_constraintEnd_toEndOf="@id/achievementInfoTextView"
        app:layout_constraintTop_toBottomOf="@id/achievementInfoTextView"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>