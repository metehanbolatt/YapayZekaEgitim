<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recyclerAchievementImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/chest"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/recyclerAchievementText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/recycler_achievement_background"
        android:fontFamily="@font/gotham_bold"
        android:padding="10dp"
        android:text="@string/computer_vision"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recyclerAchievementImage"
        app:layout_constraintTop_toTopOf="@id/recyclerAchievementImage"
        app:layout_constraintBottom_toBottomOf="@id/recyclerAchievementImage" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recyclerRelatingImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/computer_vision_eye"
        android:layout_marginEnd="10dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize15"
        app:layout_constraintTop_toTopOf="@id/recyclerAchievementText"
        app:layout_constraintBottom_toBottomOf="@id/recyclerAchievementText"
        app:layout_constraintEnd_toEndOf="@id/recyclerAchievementText" />

</androidx.constraintlayout.widget.ConstraintLayout>