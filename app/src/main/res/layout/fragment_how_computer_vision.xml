<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_design"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.mainviews.computervision.HowComputerVisionFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageHeader"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="@color/black"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/how_computer_card"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageHeader"
        app:layout_constraintBottom_toBottomOf="@id/imageHeader"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/machine_view"
        android:fontFamily="@font/gotham_bold"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toStartOf="@id/title_card"
        app:layout_constraintEnd_toEndOf="@id/title_card"
        app:layout_constraintTop_toTopOf="@id/title_card"
        app:layout_constraintBottom_toBottomOf="@id/title_card"/>

    <TextView
        android:id="@+id/informationHow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_robot_does"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_card"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gotham_bold"
        android:textSize="18sp"
        android:justificationMode="inter_word"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp" />

    <Button
        android:id="@+id/learnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_move_on_color"
        android:textStyle="bold"
        android:text="@string/learn"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/informationHow1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutImagesHow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/informationHow1" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/drawEightImage"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:transitionName="image_small"
            android:visibility="invisible"
            android:layout_weight="1"
            android:src="@drawable/draw_eight" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/drawHashEightImage"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:transitionName="image_small2"
            android:visibility="invisible"
            android:layout_weight="1"
            android:src="@drawable/draw_hash_eight" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/hashEightImage"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:transitionName="image_small3"
            android:visibility="invisible"
            android:layout_weight="1"
            android:src="@drawable/hash_eight" />

    </LinearLayout>

    <TextView
        android:id="@+id/informationHow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_eight"
        android:fontFamily="@font/gotham_bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutImagesHow" />

    <TextView
        android:id="@+id/informationHow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_to_hash"
        android:lineSpacingExtra="3dp"
        android:fontFamily="@font/gotham_bold"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/informationHow2" />

    <TextView
        android:id="@+id/informationHow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/machine_look"
        android:lineSpacingExtra="3dp"
        android:fontFamily="@font/gotham_bold"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/informationHow3" />

    <Button
        android:id="@+id/buttonHowComputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moveOn"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        android:backgroundTint="@color/button_move_on_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>