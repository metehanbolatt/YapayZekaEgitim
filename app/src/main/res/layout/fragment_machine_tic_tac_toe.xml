<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_user"
    tools:context=".view.mainviews.machinelearning.MachineTicTacToeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/infoLinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/playerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sen: "
            android:textAllCaps="false"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/playerOneScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/playerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:text="Sıra sende"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/playerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rakibin: "
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/playerTwoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"

            />







    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/infoLinear"
        app:layout_constraintBottom_toTopOf="@id/buttonsGrid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        >


        <Button
            android:id="@+id/turnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2B8F00"
            android:text="Soruyu Gör"
            android:textAllCaps="false"
            />



    </androidx.appcompat.widget.LinearLayoutCompat>


    <GridLayout
        android:id="@+id/buttonsGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintTop_toBottomOf="@id/infoLinear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"

        >

        <Button
            android:id="@+id/btn_0"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"

            />


        <Button
            android:id="@+id/btn_1"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            />


        <Button
            android:id="@+id/btn_3"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            />




        <Button
            android:id="@+id/btn_4"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            />


        <Button
            android:id="@+id/btn_5"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            />


        <Button
            android:id="@+id/btn_6"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            />



        <Button
            android:id="@+id/btn_7"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            />


        <Button
            android:id="@+id/btn_8"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8FF05"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            />











    </GridLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/buttonsGrid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="80dp"
        >
        <Button
            android:id="@+id/resetGame"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#2B8F00"
            android:gravity="center"
            android:text="Oyunu Yeniden Başlat"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            />



        <Button
            android:id="@+id/raundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2B8F00"
            android:text="Sıfırla"
            android:textAllCaps="false"

            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="4dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="399dp"
            android:layout_height="82dp"
            android:background="@drawable/ic_launcher_foreground"
            app:srcCompat="@drawable/mchnlrngrbt"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="28dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>





