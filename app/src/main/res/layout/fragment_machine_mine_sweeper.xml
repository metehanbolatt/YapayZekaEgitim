<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.mainviews.gameroom.MachineMineSweeperFragment"
    android:background="@color/mine_sweeper_background_color">

    <TextView
        android:id="@+id/mineSweeperTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mine_sweeper"
        android:textColor="@color/red"
        android:fontFamily="@font/gotham_bold"
        android:textSize="42sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/mineGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/mineSweeperTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="0"
            android:rowCount="0"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="1"
            android:rowCount="0"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="2"
            android:rowCount="0"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:columnCount="3"
            android:rowCount="0"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="0"
            android:rowCount="1"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="1"
            android:rowCount="1"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="2"
            android:rowCount="1"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:columnCount="3"
            android:rowCount="1"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="0"
            android:rowCount="2"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="1"
            android:rowCount="2"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="2"
            android:rowCount="2"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:columnCount="3"
            android:rowCount="2"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:columnCount="0"
            android:layout_marginStart="5dp"
            android:rowCount="3"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="1"
            android:rowCount="3"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:columnCount="1"
            android:rowCount="3"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E8FF05"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:columnCount="2"
            android:rowCount="3"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />

    </GridLayout>

    <Button
        android:id="@+id/restartMineGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retry_game"
        android:fontFamily="@font/gotham_bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/background_design_end_color"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

