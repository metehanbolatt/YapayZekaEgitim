<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fragment_education_background"
    tools:context=".view.mainviews.artificialintelligence.aieducation.EducationSeven">

    <TextView
        android:id="@+id/education_seven_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/button_move_on_color"
        android:text="@string/algorithm"
        android:textSize="38sp"
        android:fontFamily="@font/gotham_bold"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/education_seven_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/education_three_two_info_three"
        android:textColor="@color/white"
        android:fontFamily="@font/gotham_book"
        android:justificationMode="inter_word"
        android:textSize="18sp"
        android:lineSpacingExtra="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/education_seven_title" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/education_seven_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/algorithm"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize15"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/education_seven_info"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/education_seven_image_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/algorithm_model"
        android:textColor="@color/white"
        android:fontFamily="@font/gotham_bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/education_seven_image"
        app:layout_constraintEnd_toEndOf="@id/education_seven_image"
        app:layout_constraintTop_toBottomOf="@id/education_seven_image" />

    <Button
        android:id="@+id/education_seven_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autonomous_cars"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/fragment_education_two_button_color"
        app:layout_constraintStart_toStartOf="@id/education_seven_image_info"
        app:layout_constraintEnd_toEndOf="@id/education_seven_image_info"
        app:layout_constraintTop_toBottomOf="@id/education_seven_image_info" />

</androidx.constraintlayout.widget.ConstraintLayout>