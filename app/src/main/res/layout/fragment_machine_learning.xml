<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.mainviews.machinelearning.MachineLearningFragment"
    android:background="@drawable/background_user"
    android:layout_gravity="center"
    android:textAlignment="center">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mchnlrngrbt" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="10000dp"
            app:cardBackgroundColor="#E84A4A">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="MAKİNE ÖĞRENME NEDİR?"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E84A4A"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:text="   Makine öğrenmesi, insanların öğrenme şekillerini taklit etmek için veri ve algoritmaların kullanımına odaklanıp doğruluğunu kademeli olarak artıran bir yapay zeka (AI) ve bilgisayar bilimi dalıdır."/>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="#FFEB3B"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="HAZIR MISIN"
                android:textSize="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#2196F3"
                />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#22D129"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/userNameText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="selam"
                android:textColor="@color/white"
                />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/baslaButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="BAŞLA!"
            android:gravity="center"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/game_list_button" />

    </LinearLayout>

</FrameLayout>