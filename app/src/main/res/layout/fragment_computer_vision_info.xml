<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.mainviews.computervision.ComputerVisionInfoFragment">

   <TextView
       android:id="@+id/title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="30dp"
       android:fontFamily="@font/gothambold"
       android:text="Makineler nasıl görür?"
       android:textColor="@color/purple_500"
       android:textSize="24sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/information2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="30dp"
       android:fontFamily="@font/gothambold"
       android:justificationMode="inter_word"
       android:text="Nesneleri birbirinden ayırabilmemiz tamamen renklerine bağlıdır. Örneğin duvara asılı bir 8 rakamı düşünelim."
       android:textSize="16sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/title" />

   <TextView
       android:id="@+id/information3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sence duvar ile aynı renk olsaydı görebilir miydin?"
       android:textSize="16sp"
       android:fontFamily="@font/gothambold"
       android:justificationMode="inter_word"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="30dp"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="30dp"
       app:layout_constraintTop_toBottomOf="@id/information2" />

   <TextView
       android:id="@+id/question"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Bu duvarda 8 rakamı var mı?"
       android:textAlignment="center"
       android:textSize="20sp"
       android:textColor="@color/black"
       android:fontFamily="@font/gothambold"
       android:justificationMode="inter_word"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="30dp"
       android:layout_marginTop="12dp"
       android:layout_marginEnd="30dp"
       app:layout_constraintTop_toBottomOf="@id/duvarSekizImage" />

   <Button
       android:id="@+id/yesButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="90dp"
       android:backgroundTint="@color/green"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/question"
       android:text="Evet" />

   <Button
       android:id="@+id/noButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="90dp"
       android:backgroundTint="@color/red"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/question"
       android:text="Hayır" />

   <pl.droidsonroids.gif.GifImageView
      android:id="@+id/giphy"
       android:layout_width="150dp"
       android:layout_height="150dp"
      android:src="@drawable/cry"
       android:layout_marginTop="20dp"
       android:visibility="invisible"
       android:elevation="2dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/information3" />

   <ImageView
       android:id="@+id/duvarSekizImage"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:src="@drawable/gorunmeyensekiz"
       android:layout_marginTop="20dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/information3" />


</androidx.constraintlayout.widget.ConstraintLayout>