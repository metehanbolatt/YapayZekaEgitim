<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_design"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.mainviews.computervision.ComputerVisionInfoFragment">

   <TextView
       android:id="@+id/title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="30dp"
       android:fontFamily="@font/gothambold"
       android:text="@string/machine_how_see"
       android:textColor="@color/purple_500"
       android:textSize="24sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/information2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="30dp"
       android:textColor="@color/black"
       android:fontFamily="@font/gothambold"
       android:justificationMode="inter_word"
       android:text="@string/eight_on_the_wall"
       android:textSize="16sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/title" />

   <TextView
       android:id="@+id/information3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/same_color_wall_eight"
       android:textSize="16sp"
       android:textColor="@color/black"
       android:fontFamily="@font/gothambold"
       android:justificationMode="inter_word"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="30dp"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="30dp"
       app:layout_constraintTop_toBottomOf="@id/information2" />

   <TextView
       android:id="@+id/question"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/is_there_eight"
       android:textAlignment="center"
       android:textSize="20sp"
       android:textColor="@color/black"
       android:fontFamily="@font/gothambold"
       android:justificationMode="inter_word"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="30dp"
       android:layout_marginTop="12dp"
       android:layout_marginEnd="30dp"
       app:layout_constraintTop_toBottomOf="@id/duvarSekizImage" />

   <Button
       android:id="@+id/yesButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="90dp"
       android:backgroundTint="@color/green"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/question"
       android:text="@string/yes" />

   <Button
       android:id="@+id/noButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="90dp"
       android:backgroundTint="@color/red"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/question"
       android:text="@string/no" />

   <pl.droidsonroids.gif.GifImageView
       android:id="@+id/giphy"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:src="@drawable/cry"
       android:layout_marginTop="20dp"
       android:visibility="invisible"
       android:elevation="2dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/information3" />

   <ImageView
       android:id="@+id/duvarSekizImage"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:src="@drawable/gorunmeyensekiz"
       android:layout_marginTop="20dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/information3" />

   <LinearLayout
       android:id="@+id/linearLayoutImages"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:visibility="invisible"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/information3">

      <ImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_weight="1"
          android:layout_marginEnd="10dp"
          android:src="@drawable/gorunmeyensekiz" />

      <ImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_weight="1"
          android:layout_marginEnd="10dp"
          android:src="@drawable/azgorunensekiz" />
      <ImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_weight="1"
          android:src="@drawable/gorunensekiz" />

   </LinearLayout>

   <TextView
       android:id="@+id/information4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:fontFamily="@font/gothambold"
       android:textSize="18sp"
       android:textColor="@color/black"
       android:text="@string/important_color"
       android:justificationMode="inter_word"
       android:layout_marginTop="20dp"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       android:visibility="invisible"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/linearLayoutImages" />

   <TextView
       android:id="@+id/information5"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="18sp"
       android:fontFamily="@font/gothambold"
       android:textColor="@color/black"
       android:text="@string/machine_equals_string"
       android:visibility="invisible"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/information4"
       android:layout_marginTop="10dp"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       android:justificationMode="inter_word" />

   <ImageView
       android:id="@+id/colorScala"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/color_scala"
       android:visibility="invisible"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/information5"
       android:layout_marginTop="20dp" />

   <TextView
       android:id="@+id/questionRobot"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:fontFamily="@font/gothambold"
       android:text="@string/question_robot_see"
       android:textSize="16sp"
       android:textColor="@color/black"
       android:visibility="invisible"
       android:justificationMode="inter_word"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/colorScala"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       android:layout_marginTop="20dp" />

   <Button
       android:id="@+id/buttonRobot"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/yes"
       android:backgroundTint="@color/button_move_on_color"
       android:visibility="invisible"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@id/questionRobot"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>