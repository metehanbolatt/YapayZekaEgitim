<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeknofestEgitim" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize30" parent="">
        <item name="cornerSize">30%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize15" parent="">
        <item name="cornerSize">15%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20" parent="">
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">20%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizeTop15" parent="">
        <item name="cornerSizeTopLeft">15%</item>
        <item name="cornerSizeTopRight">15%</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/red</item>
    </style>

</resources>